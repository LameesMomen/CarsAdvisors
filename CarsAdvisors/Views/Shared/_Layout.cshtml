<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cars Advisors</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Beau+Rivage&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital@0;1&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>
</head>

<body>
    <div class="contact">
        <div class="container">
            <div class="col-sm-12 col-md-12 col-lg-12 d-flex justify-content-around ">
                <span class="my-2">
                        <img src="/Images/239502970_106315815098939_167385082857820009_n.png" class="rounded-circle me-2" width="50px" height="50px" alt="">
                        <span class="text-white">Hossam Zaki</span>
                </span>
                <span class="my-2 ">
                        <i class="bi bi-telephone fs-4 text-danger"></i>
                        <span class="text-white">
                        +20 101 190 9018

                        </span>
                </span>
                <span class="icons my-3 ">
                    <a href="https://www.facebook.com/CarsAdvisors" target="_blank" class="mx-1">
                        <i class="bi bi-facebook fs-4 text-info"></i>

                    </a>
                    <a href="https://www.youtube.com/channel/UCEhf-AIjZkzQtBs8Hq7m8kA" target="_blank" class="mx-1">
                        <i class="bi bi-youtube fs-4 text-danger"></i>

                    </a>
                    <a href="https://www.instagram.com/cars_advisors_by_hossam_zaki/" target="_blank" class="mx-1">
                        <i class="bi bi-instagram fs-4 text-warning"></i>

                    </a>
                </span>
            </div>
        </div>
    </div>
    <!-- Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
                @*<img src="/Images/logo w BG.png" alt="" width="200" height="200">*@
        </a>
            
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0  ">
                    <li class="nav-item me-2">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item me-4">
                        <a class="nav-link" asp-controller="Model" asp-action="Index">Cars</a>
                    </li>
                    <li class="nav-item me-4">
                        <a class="nav-link" asp-controller="Compare" asp-action="Compare">
                            Compare 
                            <i class="bi bi-compass text-white"> </i>
                            <span  class="badge badge-warning lblCartCount">@RenderSection("Count",true) </span>

                        </a>

                    </li>
                    @if(User.IsInRole("Admin"))
                        {
                    <li class="nav-item me-4">
                        <div class="dropdown">
                              <button class="btn text-white dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Features
                              </button>
                              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="AddAdmin">Add New Admin</a></li>
                                <li><a class="dropdown-item"  asp-controller="Maker" asp-action="New">All Make</a></li>
                                <li><a class="dropdown-item"  asp-controller="Reviews" asp-action="Index">All Reviews</a></li>
                              </ul>
                        </div>
                    </li>
                    }
                    <li class="nav-item me-4">
                        <form asp-controller="Model" asp-action="Search" class="d-flex">
                            <input name="Model" class="form-control me-1 " style="width:250px!important" type="search" placeholder="Search By Make or Model" aria-label="Search">
                            <button class="search btn btn-outline-white bg-white text-black" type="submit">Search</button>
                        </form>

                    </li>
                   <li class="nav-item login text-lg-end ms-lg-3 d-flex ">
                        <i class="bi bi-person-circle text-white mx-3 fs-4 "></i>
                @if (User.Identity.IsAuthenticated == true)
                        {
                            <span class="my-auto">
                                 <a class="text-white" > @User.Identity.Name</a>
                            </span>
                            <span class="ms-4">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                            </span>
                        }else{
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        }

                    </li>
                </ul>

            </div>

</nav>
<div>
    @RenderBody();
</div>
    <!-- Footer-->
    <footer>
        <div class="row text-center ">
            <div class="col-sm-12 col-md-6 col-lg-6 text-center mx-auto my-5">
                <h4><span style="color: white;">Cars</span> <span style="color: orange;">Advisors</span></h4>
                <p class="text-white">We will talk about everything related to cars and compare them</p>

            </div>
            <div class="col-sm-12 col-md-6 col-lg-6 mx-auto my-5">
                <h4 class="text-white">Follow us</h4>
                 <div class="icons my-3 ">
                    <a href="https://www.facebook.com/CarsAdvisors" target="_blank" class="mx-1">
                        <i class="bi bi-facebook fs-4 text-info"></i>

                    </a>
                    <a href="https://www.youtube.com/channel/UCEhf-AIjZkzQtBs8Hq7m8kA" target="_blank" class="mx-1">
                        <i class="bi bi-youtube fs-4 text-danger"></i>

                    </a>
                    <a href="https://www.instagram.com/cars_advisors_by_hossam_zaki/" target="_blank" class="mx-1">
                        <i class="bi bi-instagram fs-4 text-warning"></i>

                    </a>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12">
                <p class="text-white">© 2022 Cars Advisors</p>
            </div>

        </div>

    </footer>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js " integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4 " crossorigin="anonymous "></script>
    <script src="/lib/jquery/dist/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        AOS.init();
    </script>
    <script src="/js/script.js"></script>
    <script>
        function Collapse(){
            var element=document.getElementById("navbarSupportedContent");
            element.style.display="visible";
        }
    </script>
</body>

</html>
